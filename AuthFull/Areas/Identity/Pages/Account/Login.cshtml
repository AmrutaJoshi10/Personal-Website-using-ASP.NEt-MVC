@page
@model LoginModel


<h1>@ViewData["Title"]</h1>
<div class="login">
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                
                <div asp-validation-summary="All" class="text-danger"></div>
                <b><label asp-for="Input.Email">Email </label> </b>
                <br />
                <input type="text" asp-for="Input.Email" class="logg" />
                <span class="required" asp-validation-for="Input.Email" ></span>
                <br />
                <b> <label asp-for="Input.Password">Password </label></b>
                <br />
                <input type="password" asp-for="Input.Password" class="logg" />
                <span class="required" asp-validation-for="Input.Password" ></span>
                <br />
                <br />
                <table>
                    <tr>
                        <td>
                            <div class="checkbox">
                                <b>  <label asp-for="Input.RememberMe"></b>
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <b> <button type="submitt" class="btn btn-primary">Log in</button></b>
                        </td>
                    </tr>
                   
                    <tr>
                        <td>
                            <b>   <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a></b>
                        <td>
                    </tr>
                 
                    <tr>
                        <td>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have an Account Yet ?</a>

                        </td>
                    </tr>

                </table>
            </form>
        </section>
    </div>


